{
  "name": "servicedesk",
  "version": "1.0.0",
  "description": "Sistema de Gest√£o de Chamados - Backend + Frontend",
  "main": "dist/server.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "."
  ],
  "scripts": {
    "dev:api": "tsx watch src/server.ts",
    "dev:web": "vite --config frontend/vite.config.ts",
    "dev": "npm-run-all -p dev:api dev:web",
    "build": "npm run build:api && npm run build:web",
    "build:api": "tsc --project tsconfig.json",
    "build:web": "tsc --project frontend/tsconfig.json && vite build --config frontend/vite.config.ts",
    "preview": "vite preview --config frontend/vite.config.ts",
    "start": "node dist/server.js",
    "seed": "tsx prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:debug": "jest --verbose --bail",
    "test:suite": "jest --listTests"
  },
  "keywords": [
    "helpdesk",
    "tickets",
    "fastify",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@prisma/client": "^5.21.0",
    "axios": "^1.6.5",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1",
    "jsonwebtoken": "^9.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.20.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-localstorage-mock": "^2.4.26",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.21.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
